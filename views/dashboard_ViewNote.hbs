<body>
    <header>
        <section>
            <section><img src="assets/logo.png" alt="My diabetes Logo"></section>
            <h2 class="dr-name">Welcome Dr. Doe</h2>
            <ul>
                <li><a href="/"></a><button class = clear type="button">Sign out</button></li>
                <li><a href="/pa_Messages"><i class="fa-regular fa-bell fa-2x"></i></i></a></li>
                <li><a href="/dashboard"><i class="fa-regular fa-circle-user fa-2x"></i></a></li>
                <li>
                    <section class="hamburger">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </section>
                </li>
            </ul>
        </section>
        <nav>
            <button class="hamburger1" id="hamburger1">
                <i class="fa-solid fa-bars"></i>
            </button>
            <ul class="nav-ul"id="nav-ul">
                <li><a href = "/"><button class = nav type="button">About Diabetes</button></a></li>
                <li><a href = "/aboutUs"><button class = nav type="button">About Us</button></a></li>
                <li><a href = "/dashboard"><button class = nav type="button">Dashboard</button></a></li>
                <li><a href = "/pa_SignUp"><button class = nav type="button">Sign-up Patient</button></a></li> 
            </ul>
        </nav>
    </header>

    <main class="dashboard-content">
        <section class="patient-table">
            <section class="patient-title">
                <section class="patient-key">
                    <h2>{{patient.firstName}} {{patient.lastName}} ({{patient._id}})</h2>
                    <section class="dots">
                        <div class="dot"id="yellow-dot"></div>
                        <p>Not Updated</p>
                        <div class="dot"id="red-dot"></div>
                        <p>Attention Needed</p>
                        <a href="/pa_Messages"><i class="fa-regular fa-message"></i></a>
                    </section>
                </section>
                <section class="page-arrow">
                    <a><i class="fa-solid fa-angle-left"></i></a>
                    <a href="/dashboard2"><button class="number-1">1</button></a>
                    <button class="number-2">2</button>
                    <a><i class="fa-solid fa-angle-right"></i></a>
                </section>
            </section>
            <table class="patient-data">
                <tr>
                    <th><ion-icon class="sign"name="remove-circle-outline"></ion-icon>Blood Glucose</th>
                    <th><ion-icon name="remove-circle-outline"></ion-icon>Insulin Doses</th>
                    <th><ion-icon name="remove-circle-outline"></ion-icon>Step Count</th>
                    <th><ion-icon name="add-circle-outline"></ion-icon>Weight</th>
                    <th>Date</th>
                </tr>
                {{#each data}}
                <tr class="table-content1">
                    <!-- Pat's safety limits are hard coded into this handlerbars help function-->
                    {{#danger this.blood_sugar 4 7.8}}
                    <td class = "red-alert">{{this.blood_sugar}}</td>
                    {{else}}
                    <td class="healthy-level">{{this.blood_sugar}}</td>
                    {{/danger}}
                    <td>{{this.insulin_does}}</td>
                    <td>{{this.step_count}}</td>
                    <td >{{this.weight}}</td>
                    <td class="date">{{this.date}}</td></tr>
                {{/each}}
            </table>
        </section>
        <section class="side-note">
            <section class="patient-note">
              <h2>Notes</h2>
              <i class="fa-solid fa-angle-right"></i>
              <h2>{{patient.firstName}} {{patient.lastName}}</h2>
              <i class="fa-solid fa-xmark"></i>
            </section>
            <section class="notepad2">
                {{patient.note}}
            </section>
        </section>
    </main>
</body>